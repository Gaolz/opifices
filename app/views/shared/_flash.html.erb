<% if notice %>
    <div class="container">
      <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= notice %>
      </div>
    </div>
<% elsif alert %>
    <div class="container">
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    </div>
<% end %>